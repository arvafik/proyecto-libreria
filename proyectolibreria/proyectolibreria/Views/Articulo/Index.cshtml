@model List<proyectolibreria.Models.ViewModels.ListArticuloViewModel>
@{
    ViewBag.Title = "Articulos";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col">
        <div class="card">
            <!-- Card -->
            <div class="card-header border-0">
                <h3 class="mb-0">@ViewBag.Title</h3>
                <div class="col text-right">
                    <a href="~/Articulo/Nuevo" class="btn btn-sm btn-primary">Agregar articulo</a>
                </div>
            </div>
                <!-- tabla -->
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Descripcion</th>
                                <th scope="col">Categoria</th>
                                <th scope="col">Autor</th>
                                <th scope="col">Editorial</th>
                                <th scope="col">Inventario</th>
                                <th scope="col">Precio</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            @foreach (var oElemento in Model)
                            {
                            <tr>
                                <td>@oElemento.Id</td>
                                <td>@oElemento.Nombre</td>
                                <td>@oElemento.Descripcion</td>
                                <td>@oElemento.Categoria</td>
                                <td>@oElemento.Autor</td>
                                <td>@oElemento.Editorial</td>
                                <td>@oElemento.TotalInventario</td>
                                <td>@oElemento.Precio</td>
                                <td>
                                    <a class="btn btn-default" href="~/Articulo/Editar/@oElemento.Id">Editar</a>
                                    <a class="btn btn-danger" href="~/Articulo/Eliminar/@oElemento.Id">Eliminar</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
    </div>
</div>
